<div class="container">
  <div class="row">
    <div class="col-6">

      <h1 class="my-3">Give your review to this restaurant</h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, input_html: { class: 'my-2' } %>
        <%= f.input :rating, collection: 0..5, input_html: { class: 'my-2' } %>
        <div class="d-flex align-items-center justify-content-between">
          <%= f.submit class: 'btn btn-primary my-4' %>
          <%= link_to "Check all restaurants", restaurants_path %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>